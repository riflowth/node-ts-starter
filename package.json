{
  "name": "node-ts-starter",
  "version": "1.0.0",
  "main": "dist/app.js",
  "author": "Vectier",
  "private": true,
  "type": "module",
  "scripts": {
    "build:dev": "webpack --mode=development --watch",
    "build:prod": "webpack --mode=production",
    "dev": "npm-run-all --parallel build:dev start:dev",
    "start:dev": "nodemon dist/app.js --watch dist",
    "start:prod": "node dist/app.js",
    "start": "yarn run start:prod",
    "test": "jest"
  },
  "devDependencies": {
    "ts-loader": "^9.2.6",
    "typescript": "^4.5.5",
    "webpack": "^5.68.0",
    "webpack-cli": "^4.9.2"
  },
  "dependencies": {
    "yarn-run-all": "^3.1.1"
  },
  "engines": {
    "node": "^16.0.0"
  }
}
